<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:elevation="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:id="@+id/billImage"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/incomeTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="This is a Title"
            android:gravity="center"
            android:layout_toRightOf="@+id/billImage"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/incomeAmount"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@+id/billImage"
            android:textSize="15sp"
            android:textAppearance="@style/ShapeAppearance.MaterialComponents.LargeComponent"
            android:text="$100.25"
            android:layout_below="@+id/incomeTitle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/incomeDate"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/billImage"
            android:textSize="15sp"
            android:text="Posted On 2019/01/01"
            android:layout_below="@+id/incomeAmount"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>